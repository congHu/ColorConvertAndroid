<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hcdstudio.colorconvert.MainActivity">

    <ImageView
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hexEditText"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:text="000000"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="#"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/hexEditText"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignBottom="@+id/hexEditText"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/redEditText"
        android:layout_below="@+id/hexEditText"
        android:layout_alignLeft="@+id/hexEditText"
        android:layout_alignStart="@+id/hexEditText"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@+id/hexEditText"
        android:layout_alignEnd="@+id/hexEditText"
        android:text="0"
        android:paddingLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/greenEditText"
        android:layout_below="@+id/redEditText"
        android:layout_alignLeft="@+id/redEditText"
        android:layout_alignStart="@+id/redEditText"
        android:layout_alignRight="@+id/redEditText"
        android:layout_alignEnd="@+id/redEditText"
        android:text="0"
        android:paddingLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/blueEditText"
        android:layout_below="@+id/greenEditText"
        android:layout_alignLeft="@+id/greenEditText"
        android:layout_alignStart="@+id/greenEditText"
        android:layout_alignRight="@+id/greenEditText"
        android:layout_alignEnd="@+id/greenEditText"
        android:text="0"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="R"
        android:id="@+id/textView2"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/redEditText"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/redEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="G"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/greenEditText"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/greenEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="B"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/blueEditText"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/blueEditText" />

</RelativeLayout>
